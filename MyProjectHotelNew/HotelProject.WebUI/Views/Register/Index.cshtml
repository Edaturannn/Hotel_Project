
@model RegisterViewModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta http-equiv="x-ua-compatible" content="ie=edge" />
    <title>Register</title>
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v6.0.0/css/all.css" />
    <!-- Google Fonts Roboto -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700&display=swap" />
    <!-- MDB -->
    <link rel="stylesheet" href="~/Register_Login_Tema/css/mdb.min.css" />
</head>
<body>
    <!--Main Navigation-->
    <header>
        <style>
            #intro {
                background-image: url(https://mdbootstrap.com/img/new/fluid/city/008.jpg);
                height: 100vh;
            }

            .navbar .nav-link {
                color: #fff !important;
            }
        </style>
        <!-- Background image -->
        <div id="intro" class="bg-image shadow-2-strong">
            <div class="mask d-flex align-items-center h-100" style="background-color: rgba(0, 0, 0, 0.8);">
                <div class="container">
                    <div class="row justify-content-center">
                        <h1 style="text-align:center; color:white;">Register</h1>
                        <div class="col-xl-5 col-md-8">
                            <form method="post">
                                <div asp-validation-summary="All" class="text-danger"></div>
                                <div class="form-group">
                                    <label asp-for="Name" style="color:white;"></label>
                                    <input asp-for="Name" class="form-control" type="text" />
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>
                                <br />
                                <div class="form-group">
                                    <label asp-for="SurName" style="color:white;"></label>
                                    <input asp-for="SurName" class="form-control" type="text" />
                                    <span asp-validation-for="SurName" class="text-danger"></span>
                                </div>
                                <br />

                                <div class="form-group">
                                    <label asp-for="UserName" style="color:white;"></label>
                                    <input asp-for="UserName" class="form-control" type="text" />
                                    <span asp-validation-for="UserName" class="text-danger"></span>
                                </div>
                                <br />


                                <div class="form-group">
                                    <label asp-for="Email" style="color:white;"></label>
                                    <input asp-for="Email" class="form-control" type="email" />
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                                <br />




                                <div class="form-group">
                                    <label asp-for="Password" style="color:white;"></label>
                                    <input asp-for="Password" class="form-control" type="password" />
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>
                                <br />

                                <div class="form-group">
                                    <label asp-for="RePassword" style="color:white;"></label>
                                    <input asp-for="RePassword" class="form-control" type="password" />
                                    <span asp-validation-for="RePassword" class="text-danger"></span>
                                </div>
                                <br />
                                <button type="submit" class="btn btn-dark"><b>Register</b></button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Background image -->
    </header>
    <!--Main Navigation-->
    <!-- MDB -->
    <script type="~/Register_Login_Tema/text/javascript" src="js/mdb.umd.min.js"></script>
</body>
</html>
