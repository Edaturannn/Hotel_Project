@model List<ResultRoomDto>
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Index";
    int count = 0;
}
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Number</th>
        <th>Cover Image</th>
        <th>Price</th>
        <th>Title</th>
        <th>Bed Count</th>
        <th>Bath Count</th>
        <th>Wifi</th>
        <th>Description</th>
        <th>Güncelle</th>
        <th>Sil</th>
        <th>Detaylar</th>
    </tr>
    @foreach (var item in Model)
    {
            count++;
        <tr>
            <th>@count</th>
            <td>@item.RoomNumber</td>
            <td>@item.RoomCoverImage</td>
            <td>@item.Price</td>
            <td>@item.Title</td>
            <td>@item.BedCount</td>
            <td>@item.BathCount</td>
            <td>@item.Wifi</td>
            <td>@item.Description</td>
            <td><a href="/AdminRoom/UpdateRoom/@item.RoomID" class="btn mb-1 btn-rounded btn-outline-warning">Güncelle</a></td>
            <td><a href="/AdminRoom/DeleteRoom/@item.RoomID" class="btn mb-1 btn-rounded btn-outline-danger">Sil</a></td>
            <td><a href="#" class="btn mb-1 btn-rounded btn-outline-dark">Detaylar</a></td>
        </tr>
    }
</table>
<td><a href="/AdminRoom/AddRoom" class="btn mb-1 btn-rounded btn-outline-info">Ekle</a></td>
