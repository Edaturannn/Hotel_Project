@{
    ViewData["Title"] = "Update Service";
    Layout = "_AdminLayout";
}
<form method="post" asp-action="UpdateService" asp-controller="AdminService">
    <input type="hidden" name="ServiceID" />
    <label>Hizmet İkonu</label>
    <input type="text" name="ServiceIcon" class="form-control" />
   
    <br />
    <label>Hizmet Başlığı</label>
    <input type="text" name="Title" class="form-control" />

    <br />
    <label>Açıklama</label>
    <input type="text" name="Description" class="form-control" />

    <br />
    <button class="btn btn-primary">Güncelle</button>
</form>

